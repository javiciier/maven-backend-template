<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <!-- Properties to be logged -->
    <Property name="iso-date">%date{yyyy-MM-dd'T'HH:mm:ss.SSSZ}{GMT+1}</Property>
    <Property name="thread">[%t]</Property>
    <Property name="level">%-5level</Property>
    <Property name="logger">%logger</Property>
    <Property name="message">%msg</Property>
    <Property name="logFormat">${iso-date} ${thread} ${level} ${logger} -- ${message} %n</Property>

    <!-- Variables -->
    <Property name="applicationName">myapp</Property>
    <Property name="elasticIndexTemplatePath">
      classpath:${applicationName}-elastic-index-template.json
    </Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${logFormat}"/>
    </Console>

    <File name="File" fileName="logs/dev/dev-logs.log">
      <PatternLayout pattern="${logFormat}"/>
    </File>

    <Elasticsearch name="ElasticsearchAppender">
      <IndexName indexName="${applicationName}-logs"/>

      <AsyncBatchDelivery>
        <!-- Elastic client writting the logs -->
        <HCHttp
          serverUris="http://localhost:9200"
          connTimeout="2000"
          readTimeout="20000"
          maxTotalConnections="4"
        >
          <PooledItemSourceFactory
            poolName="es-batch-pool"
            initialPoolSize="4"
            itemSizeInBytes="2048000"
          >
          </PooledItemSourceFactory>
        </HCHttp>

        <!-- Logging template with the data to be logged -->
        <IndexTemplate name="${applicationName}-logs">
          <Path>${elasticIndexTemplatePath}</Path>
        </IndexTemplate>

      </AsyncBatchDelivery>
      <JsonLayout complete="true" compact="true">
        <KeyValuePair key="@timestamp" value="${iso-date}"/>
        <KeyValuePair key="process.thread.name" value="${thread}"/>
        <KeyValuePair key="log.level" value="${level}"/>
        <KeyValuePair key="log.logger" value="${logger}"/>
        <KeyValuePair key="log.format" value="${logFormat}"/>
        <KeyValuePair key="message" value="${message}"/>
        <KeyValuePair key="service.name" value="${applicationName}"/>
      </JsonLayout>

    </Elasticsearch>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
      <AppenderRef ref="ElasticsearchAppender"/>
    </Root>

    <AsyncLogger name="Elasticsearch">
      <AppenderRef ref="ElasticsearchAppender"/>
    </AsyncLogger>

  </Loggers>

</Configuration>
